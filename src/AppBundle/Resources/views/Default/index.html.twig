{% extends "AppBundle::base.html.twig" %}

{% block title %}Index{% endblock title %}

{% block body %}
    <h1>Bienvenue !</h1>

    <p>Cette page vous permet de chercher des repository git par utilisateur, et de laisser des commentaires dessus.</p>

    {% for flash in app.session.flashbag.get('error') %}
        <p class="bg-danger">{{ flash }}</p>
    {% endfor %}

    {{ form(form) }}

    {% if users is defined %}
        <hr>

        <h1>Liste des correspondances :</h1>
        <ul>
        {% for user in users %}
            <li><a href="{{ path('comment', {'username':user}) }}">{{ user }}</a></li>
        {% endfor %}
        </ul>
    {% endif %}
{% endblock body %}
